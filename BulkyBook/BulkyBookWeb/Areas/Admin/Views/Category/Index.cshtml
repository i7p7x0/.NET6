@model IEnumerable<BulkyBook.Models.Category>
@{
    ViewData["Title"] = "Index";
}



<div class="container p-3">
    <div class="row pt-4"><div class="col-6"><h2 class="text-primary">Category List</h2></div>
    <div class="col-6 text-end"><a asp-controller="Category" asp-action="Create" class="btn-primary btn">Create New Category <i class="bi bi-plus-circle"></i></a></div></div>
    <br/><br/>


<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Display Order
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="50%">
                    @obj.Name
                </td>
                <td width="50%">
                    @obj.DisplayOrder
                </td>
               <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-action="Edit" asp-controller="Category" asp-route-id="@obj.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i></a>
                        <a asp-action="Delete" asp-controller="Category" asp-route-id="@obj.Id" class="btn btn-danger mx-2"><i class="bi bi-trash"></i></a>
                    </div>
                </td> 
            </tr>
        }
    </tbody>
</table>
</div>
